<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D50606"
    tools:context=".ManageScheduleHostelActivity$MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/backViewSchedule"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:layout_marginRight="320dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/scheduleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:text="Available Time"
                android:textColor="#ffffff"
                android:textSize="33dp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/myRectangleContainer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/scheduleTextView">

            <View
                android:id="@+id/myRectangle1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/inti_background" />

            <FrameLayout
                android:id="@+id/innerContainer"
                android:layout_width="350dp"
                android:layout_height="600dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/myRectangle2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:outlineProvider="background" />

                <EditText
                    android:id="@+id/myEditText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="260dp"
                    android:background="@drawable/schedule_border"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint=""
                    android:inputType="text"
                    android:textSize="25dp"
                    android:minHeight="60dp" />

                <TextView
                    android:id="@+id/dateLabelhostel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="16dp"
                    android:text="1 Jan 2024"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateLabelhostel2"
                    android:layout_marginTop="38dp"
                    android:text="9:30"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginStart="21dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateLabelhostel3"
                    android:layout_marginTop="27dp"
                    android:text="x1"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginStart="315dp"/>

                <FrameLayout
                    android:id="@+id/innerContainer2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:layout_marginBottom="260dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/seat"
                        android:background="#83C5C5C5"
                        />

                </FrameLayout>

            </FrameLayout>


        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>