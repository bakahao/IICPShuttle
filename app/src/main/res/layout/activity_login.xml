<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="363dp"
        android:layout_height="370dp"
        android:layout_margin="8dp"
        android:background="@drawable/login_rounded_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_medium"
            android:text="Email:"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <EditText
            android:id="@+id/idEditText"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:background="@drawable/edit_text_background"
            android:hint="Enter Email"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#78909C"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="HardcodedText,TextFields,TextSizeCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Password:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:fontFamily="@font/inter_medium"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <EditText
            android:id="@+id/idEditText2"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:background="@drawable/edit_text_background"
            android:hint="Enter Password"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#78909C"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="HardcodedText,TextFields,TextSizeCheck,TextContrastCheck" />

        <Button
            android:id="@+id/button1"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/register_button_background"
            android:text="Register"
            android:textColor="#000000"
            android:textSize="24sp"
            android:fontFamily="@font/inter_medium"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <Button
            android:id="@+id/button2"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/login_button_background"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:fontFamily="@font/inter_medium"
            tools:ignore="HardcodedText,VisualLintButtonSize,TextSizeCheck" />

    </LinearLayout>



    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="332dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:importantForAccessibility="no"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/helpdesk"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="no" />




</androidx.constraintlayout.widget.ConstraintLayout>